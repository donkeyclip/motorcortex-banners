{
  "name": "@kissmybutton/motorcortex-banners",
  "version": "0.0.14",
  "description": "banners plugin for MotorCortex",
  "main": "dist/motorcortex-banners.cjs.js",
  "module": "dist/motorcortex-banners.esm.js",
  "browser": "dist/motorcortex-banners.umd.js",
  "author": "KissMyButton PC (kissmybutton.gr) <opensource@kissmybutton.gr>",
  "repository": {
    "type": "git",
    "url": "https://github.com/kissmybutton/motorcortex-banners.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.3.2"
  },
  "scripts": {
    "lint": "eslint -c .eslintrc src/**/*.js",
    "lint:fix": "npm run lint -- --fix",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "rollup -c",
    "start": "npm run build:lib && concurrently -c \"cyan.bold,magenta.bold\" \"npm:build:lib -- -w\"  \"npm:start:demo\" ",
    "start:demo": "webpack serve --config ./demo/webpack.config.js --mode=development --progress ",
    "build:demo": "webpack --mode=production --config ./demo/webpack.config.js",
    "test": "HERE GOES YOUR TEST TASK",
    "test:prod": "npm run lint",
    "commit": "git-cz",
    "prebuild": "rimraf dist",
    "prepare": "husky install"
  },
  "keywords": [
    "motorcortex",
    "animation"
  ],
  "lint-staged": {
    "linters": {
      "*.json": [
        "prettier --write",
        "git add"
      ],
      "*.{js,jsx}": [
        "eslint --fix",
        "git add"
      ]
    }
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "@donkeyclip/motorcortex": ">= 6.4.1 < 8",
    "@donkeyclip/motorcortex-anime": ">= 2.1.16 < 3"
  },
  "devDependencies": {
    "@babel/cli": "7.14.8",
    "@babel/core": "7.14.8",
    "@babel/eslint-parser": "^7.15.8",
    "@babel/preset-env": "7.14.8",
    "@commitlint/cli": "7.6.1",
    "@commitlint/config-conventional": "7.6.0",
    "@donkeyclip/motorcortex": "^7.4.0",
    "@donkeyclip/motorcortex-anime": "^2.1.16",
    "@donkeyclip/motorcortex-player": "^2.2.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^18.1.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@semantic-release/changelog": "3.0.6",
    "@semantic-release/git": "7.0.18",
    "@semantic-release/github": "5.5.8",
    "@semantic-release/npm": "5.3.5",
    "@size-limit/preset-big-lib": "5.0.5",
    "babel-loader": "8.2.2",
    "browserslist": "4.16.6",
    "caniuse-lite": "1.0.30001248",
    "commitizen": "3.1.2",
    "concurrently": "^4.1.2",
    "core-js": "^3.18.3",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "3.6.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-standard": "4.1.0",
    "husky": "^7.0.0",
    "lint-staged": "8.2.1",
    "prettier": "1.19.1",
    "rimraf": "2.7.1",
    "rollup": "2.55.1",
    "rollup-plugin-terser": "7.0.2",
    "semantic-release": "^15.13.2",
    "size-limit": "5.0.4",
    "webpack": "5.53.0",
    "webpack-cli": "4.8.0",
    "webpack-dev-server": "3.11.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
